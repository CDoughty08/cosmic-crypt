{
  "name": "cosmic-crypt",
  "version": "1.5.1",
  "description": "utility to reduce boilerplate when encrypting/decrypting text",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "./dist/cli/index.js",
  "scripts": {
    "test": "nyc mocha",
    "build": "tsc -p ./tsconfig.publish.json .",
    "dev": "concurrently -n tsc,mocha -c cyan,green \"tsc -p ./tsconfig.json --watch\" \"mocha --watch\"",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
    "prepublishOnly": "tsc -p tsconfig.publish.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CDoughty08/cosmic-crypt.git"
  },
  "author": "Cody Doughty",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CDoughty08/cosmic-crypt/issues"
  },
  "homepage": "https://github.com/CDoughty08/cosmic-crypt#readme",
  "nyc": {
    "check-coverage": true,
    "lines": 99,
    "statements": 99,
    "functions": 99,
    "branches": 99,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/cosmic-crypt.ts",
      "src/cli/index.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  },
  "devDependencies": {
    "@types/bluebird": "3.5.8",
    "@types/chai": "4.0.1",
    "@types/commander": "2.9.1",
    "@types/inquirer": "0.0.35",
    "@types/mocha": "2.2.41",
    "@types/node": "8.0.12",
    "@types/sinon": "2.3.2",
    "chai": "4.1.0",
    "concurrently": "3.5.0",
    "coveralls": "2.13.1",
    "mocha": "3.4.2",
    "nyc": "11.0.3",
    "sinon": "2.3.8",
    "source-map-support": "0.4.15",
    "ts-node": "3.2.0",
    "tslint": "5.5.0",
    "typescript": "2.4.1"
  },
  "dependencies": {
    "bluebird": "3.5.0",
    "commander": "2.11.0",
    "inquirer": "3.2.0"
  }
}
