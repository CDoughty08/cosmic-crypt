{
  "name": "cosmic-crypt",
  "version": "2.0.0",
  "description": "utility to reduce boilerplate when encrypting/decrypting text",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "./dist/cli/index.js",
  "scripts": {
    "test": "nyc mocha --config \"./test/mocha.json\" \"src/**/*.spec.ts\"",
    "build": "tsc -p ./tsconfig.publish.json .",
    "dev": "concurrently -n tsc,mocha -c cyan,green \"tsc -p ./tsconfig.json --watch\" \"mocha --watch\"",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
    "prepublishOnly": "tsc -p tsconfig.publish.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CDoughty08/cosmic-crypt.git"
  },
  "author": "Cody Doughty",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "bugs": {
    "url": "https://github.com/CDoughty08/cosmic-crypt/issues"
  },
  "homepage": "https://github.com/CDoughty08/cosmic-crypt#readme",
  "nyc": {
    "check-coverage": true,
    "lines": 99,
    "statements": 99,
    "functions": 99,
    "branches": 99,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/cosmic-crypt.ts",
      "src/utility/crypto.ts",
      "src/cli/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  },
  "devDependencies": {
    "@types/bluebird": "3.5.32",
    "@types/chai": "4.2.11",
    "@types/inquirer": "6.5.0",
    "@types/mocha": "7.0.2",
    "@types/node": "14.0.22",
    "@types/sinon": "9.0.4",
    "chai": "4.2.0",
    "concurrently": "5.2.0",
    "coveralls": "3.1.0",
    "mocha": "8.0.1",
    "nyc": "15.1.0",
    "sinon": "9.0.2",
    "source-map-support": "0.5.19",
    "ts-node": "8.10.2",
    "tslint": "6.1.2",
    "typescript": "3.9.6"
  },
  "dependencies": {
    "bluebird": "3.7.2",
    "chalk": "4.1.0",
    "commander": "5.1.0",
    "inquirer": "7.3.1"
  }
}
