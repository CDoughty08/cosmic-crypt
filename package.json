{
  "name": "cosmic-crypt",
  "version": "2.0.0",
  "description": "utility to reduce boilerplate when encrypting/decrypting text",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "./dist/cli/index.js",
  "scripts": {
    "test": "nyc mocha",
    "build": "tsc -p ./tsconfig.publish.json .",
    "dev": "concurrently -n tsc,mocha -c cyan,green \"tsc -p ./tsconfig.json --watch\" \"mocha --watch\"",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/.bin/coveralls",
    "prepublishOnly": "tsc -p tsconfig.publish.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CDoughty08/cosmic-crypt.git"
  },
  "author": "Cody Doughty",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "bugs": {
    "url": "https://github.com/CDoughty08/cosmic-crypt/issues"
  },
  "homepage": "https://github.com/CDoughty08/cosmic-crypt#readme",
  "nyc": {
    "check-coverage": true,
    "lines": 99,
    "statements": 99,
    "functions": 99,
    "branches": 99,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "src/cosmic-crypt.ts",
      "src/cli/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true,
    "all": true
  },
  "devDependencies": {
    "@types/bluebird": "3.5.27",
    "@types/chai": "4.2.3",
    "@types/inquirer": "6.5.0",
    "@types/mocha": "5.2.7",
    "@types/node": "12.7.11",
    "@types/sinon": "7.5.0",
    "chai": "4.2.0",
    "concurrently": "5.0.0",
    "coveralls": "3.0.6",
    "mocha": "6.2.1",
    "nyc": "14.1.1",
    "sinon": "7.5.0",
    "source-map-support": "0.5.13",
    "ts-node": "8.4.1",
    "tslint": "5.20.0",
    "typescript": "3.6.3"
  },
  "dependencies": {
    "bluebird": "3.7.0",
    "chalk": "^2.4.2",
    "commander": "3.0.2",
    "inquirer": "7.0.0"
  }
}
